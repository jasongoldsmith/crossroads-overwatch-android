<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_b_g_s_i_g_n_i_n"
        android:layout_alignParentTop="true"
        android:id="@+id/hero_img"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/forgot_login">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="73dp"
        android:id="@+id/traveller_bdg"
        android:src="@drawable/img_logo_badge"
        android:layout_marginBottom="63dp"
        android:layout_above="@+id/login_accnt"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backbtn"
        android:src="@drawable/icon_back_arrow"
        android:padding="6dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_accnt"
        android:layout_above="@+id/console"
        android:layout_marginBottom="19dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/trimble_white"
        android:layout_centerHorizontal="true"
        android:text="READY TO FIGHT THE DARKNESS?"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/console"
        android:layout_above="@+id/name_layout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <android.support.v7.widget.CardView
            xmlns:conversation="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/playstation_btn"
            android:layout_weight="1"
            app:border="true"
            app:borderColor="#979797"
            app:circularBorderWidth="1dp"
            conversation:cardBackgroundColor="@color/app_theme_color"
            conversation:cardElevation="0dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ps_image"
                android:src="@drawable/icon_psn_consolex"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playstation_text"
                android:text="PlayStation 4"
                android:textColor="@color/trimble_white"
                android:layout_toRightOf="@+id/ps_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:conversation="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/xbox_btn"
            app:border="true"
            app:borderColor="#979797"
            conversation:cardBackgroundColor="@color/edittext_background"
            app:circularBorderWidth="1dp"
            conversation:cardElevation="0dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/xbox_image"
                    android:src="@drawable/icon_xboxone_consolex"
                    android:layout_marginLeft="13dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/xbox_text"
                    android:text="Xbox One"
                    android:layout_toRightOf="@+id/xbox_image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/name_layout"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#4f000000"
        android:layout_above="@+id/pswd_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_icon"
            android:src="@drawable/img_icon_id"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_name"
            android:hint="@string/playstation_hint"
            android:textColor="@color/trimble_white"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:background="@null"
            android:textSize="18sp"
            android:inputType="textVisiblePassword"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_toRightOf="@+id/name_icon"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/pswd_layout"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#4f000000"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pswrd_icon"
            android:src="@drawable/img_icon_password"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_pswrd"
            android:hint="Enter password"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:nextFocusDown="@id/signin"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/pswrd_icon"
            android:gravity="center_vertical"
            android:layout_marginLeft="22dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_pswd"
            android:src="@drawable/icon_showpassword"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="14dp"/>
    </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_login"
        android:text="FORGOT PASSWORD?"
        android:textColor="@color/trimble_white"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:paddingTop="23dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/signin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/signin"
        android:background="#0086d0"
        android:text="@string/signin"
        android:fontFamily="sans-serif"
        android:layout_marginTop="42dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

    <include layout="@layout/activity_base" />

</RelativeLayout>