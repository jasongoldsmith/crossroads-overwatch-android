    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/psnid_layout"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/travel_badge"
            android:src="@mipmap/img_b_g_top_hero"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/create_accnt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_accnt"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:text="@string/create_crossroads_accnt"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/psnid_layout"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#4f000000"
        android:layout_above="@+id/name_layout">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/psn_icon"
            android:src="@drawable/img_icon_id"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psn"
            android:layout_toRightOf="@+id/psn_icon"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:textSize="10sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/signup_psn"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:background="@null"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/psn_icon"
            android:layout_below="@+id/psn"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/name_layout"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#4f000000"
        android:layout_above="@+id/pswd_layout">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/name_icon"
            android:src="@drawable/img_icon_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/name_icon"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:textSize="10sp"
            android:text="@string/username_text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/signup_name"
            android:hint="@string/username_hint"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:textSize="14sp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/name_icon"
            android:layout_below="@+id/name"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/pswd_layout"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="#4f000000"
        android:layout_above="@+id/signup_btn">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/pswrd_icon"
            android:src="@drawable/img_icon_password"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pswd"
            android:layout_toRightOf="@+id/pswrd_icon"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:textSize="10sp"
            android:text="PASSWORD"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/signup_pswrd"
            android:hint="Enter password"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/pswrd_icon"
            android:layout_below="@+id/pswd"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp" />
    </RelativeLayout>

