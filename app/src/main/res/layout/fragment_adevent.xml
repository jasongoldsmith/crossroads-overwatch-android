<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:conversation="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ad_event"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        conversation:cardBackgroundColor="@android:color/transparent"
        app:border="true"
        app:borderColor="#979797"
        app:circularBorderWidth="1dp"
        conversation:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/add_card_default"
            android:id="@+id/adcard_img"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:id="@+id/fragment_adevent_mainlayout">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="11dp"
                android:layout_marginLeft="11dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/adevent_icon"
                    android:src="@mipmap/icon_notification"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ad_header"
                    android:text="Header missing"
                    android:textSize="20dp"
                    android:textColor="@color/trimble_white"
                    android:layout_toRightOf="@+id/adevent_icon"
                    android:layout_marginLeft="9dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ad_subheader"
                    android:textSize="12dp"
                    android:text="Subheader missing"
                    android:layout_toRightOf="@+id/adevent_icon"
                    android:layout_below="@+id/ad_header"
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/activity_light_color"
                    />
                
                <android.support.v7.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:id="@+id/adcard_addbtn"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    conversation:cardBackgroundColor="@color/app_theme_color"
                    conversation:cardElevation="0dp"
                    conversation:cardCornerRadius="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_activity"
                        android:layout_gravity="center"
                        android:text="ADD"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="@color/trimble_white"
                        android:textSize="12dp"/>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>