<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v4.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/out"
    android:clipChildren="false"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:context=".ListActivity"
        android:background="@mipmap/img_background_signin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_top_layout"
            android:background="@mipmap/img_header_bg"
            android:layout_alignParentTop="true">

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/img_header_bg"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:adjustViewBounds="true"/>-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge_icon"
                android:src="@drawable/icon_region_menu"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"/>

            <co.crossroadsapp.overwatch.utils.CircularImageView
                android:layout_width="@dimen/player_profile_width"
                android:layout_height="@dimen/player_profile_hgt"
                android:id="@+id/userProfile"
                android:src="@drawable/default_profile"
                android:layout_marginStart="11dp"
                android:layout_marginTop="33dp"
                android:layout_alignParentStart="true"
                app:border="true"
                app:borderColor="@color/trimble_white"
                app:circularBorderWidth="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_top_layout"
            android:layout_above="@+id/create_new_event"
            android:layout_marginTop="-48dp">
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                app:tabMode="fixed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                app:tabTextColor="#d3d3d3"
                app:tabIndicatorColor="@color/join_btn_color"
                app:tabSelectedTextColor="@color/join_btn_color"
                app:tabPaddingStart="20dp"
                app:tabPaddingEnd="0dp"
                android:minHeight="?attr/actionBarSize" />
            <co.crossroadsapp.overwatch.SwipeFrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notification_bar_layout"
                android:layout_below="@+id/tab_layout"
                android:visibility="gone"
                android:orientation="vertical">

                <co.crossroadsapp.overwatch.SwipeDeck
                    android:id="@+id/swipe_deck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    swipedeck:card_spacing="6dp"
                    swipedeck:render_above="true"
                    swipedeck:rotation_degrees="0"
                    />
            </co.crossroadsapp.overwatch.SwipeFrameLayout>
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notification_bar_layout"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:background="@android:color/transparent"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_activity_btn_height"
            android:id="@+id/create_new_event"
            android:background="@color/join_btn_color"
            android:text="@string/add_activity"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/trimble_white"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/error_layout"
            android:layout_alignParentTop="true"
            android:background="@android:color/black"
            android:layout_marginTop="24dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error"
                android:src="@drawable/icon_error"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error_text"
                android:text="MISADVENTURE"
                android:textSize="12sp"
                android:textColor="#ff0000"
                android:layout_toRightOf="@+id/error"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error_sub"
                android:textSize="12sp"
                android:lines="3"
                android:textColor="@color/trimble_white"
                android:layout_toRightOf="@+id/error"
                android:layout_below="@+id/error_text"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/err_close"
                android:src="@drawable/icon_close_sm"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="7dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <!-- The navigation drawer left-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|bottom"
        android:background="@mipmap/img_profile_background"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/watchat_version_name"
                android:textColor="@color/trimble_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/watchat_server"
                android:textColor="@color/trimble_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <!--<ImageView-->
                <!--android:id="@+id/profile_avatar"-->
                <!--android:layout_width="35dp"-->
                <!--android:layout_height="35dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginBottom="14dp"-->
                <!--android:layout_marginTop="64dp"-->
                <!--android:onClick="updateProfileAvatar"-->
                <!--android:src="@drawable/img_i_c_o_n_r_a_i_d" />-->

            <RelativeLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:gravity="center"
                android:id="@+id/user_profile_layout"
                android:layout_marginTop="88dp"
                android:layout_centerHorizontal="true">
                <co.crossroadsapp.overwatch.utils.CircularImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:id="@+id/profile_avatar"
                    android:src="@drawable/default_profile"
                    app:borderColor="@color/login_color"
                    app:border="true"/>
                <ProgressBar
                    android:id="@+id/loadingImg"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminateDrawable="@drawable/progress"
                    android:visibility="gone"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/profile_name_color"
                android:textSize="16sp"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:layout_below="@+id/user_profile_layout"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/multi_console_layout"
            android:layout_marginTop="25dp"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:layout_below="@+id/profile_header">

            <co.crossroadsapp.overwatch.views.CloseableSpinner
                android:id="@+id/console_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/game_mode_button_bg"
                android:gravity="center"
                android:overlapAnchor="false"
                android:popupElevation="0dp"
                android:popupBackground="@android:color/transparent"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/console_icon"
                android:src="@drawable/icon_psn_consolex"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/consoletype_text"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/down_arw_img"
                android:src="@drawable/icon_arrow_dwn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/multi_console_layout"
            android:id="@+id/change_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/game_mode_button_bg"
            android:text="@string/change_password"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/change_email"
            android:layout_centerHorizontal="true"
            android:text="@string/change_email"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:layout_below="@+id/change_password"
            android:gravity="center"
            android:background="@drawable/game_mode_button_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/crash_btn"
            android:layout_below="@+id/change_email"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/report_crash"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:gravity="center"
            android:background="@drawable/game_mode_button_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/crash_btn"
            android:id="@+id/invite"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/traveller_login_email_input_bg"
            android:text="@string/invite_frnd"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/logout_btn"
            android:layout_below="@+id/invite"
            android:background="@drawable/game_mode_button_bg"
            android:text="@string/logout"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/legal_layout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:id="@+id/legal1"
                android:textSize="12sp"
                android:textColor="@color/trimble_white"
                android:text="@string/terms_string"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/legal2"
                android:paddingBottom="16dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/legal1"
                android:textColor="@color/trimble_white"
                android:text="@string/privacy_string"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/legal3"
                android:layout_toRightOf="@+id/legal2"
                android:textSize="12sp"
                android:textColor="@color/trimble_white"
                android:text="@string/license_string"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/build_version"
            android:layout_above="@+id/legal_layout"
            android:textSize="12sp"
            android:textColor="@color/trimble_white"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

    <!-- The navigation drawer right-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:background="@mipmap/img_right_drawer_region_bg"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_c_r_o_w_logo"
                android:id="@+id/img_logo"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_top_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_logo"
                android:layout_marginTop="14dp"
                android:textColor="@color/trimble_white"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/region"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:id="@+id/group_bottom_text"
                android:layout_below="@+id/group_top_text"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#00b6e7"
                android:textSize="12sp"
                android:text="@string/group_other_text"/>

            <android.support.v7.widget.CardView
                xmlns:conversation="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/group_top_text"
                android:id="@+id/group_selected"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                conversation:cardBackgroundColor="@android:color/transparent"
                conversation:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/logout_btn_background"
                    android:id="@+id/group_selected_mainlayout">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:id="@+id/group_selected_image"
                        android:src="@drawable/img_dog_ear"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textSize="14sp"
                        android:id="@+id/group_selected_name"
                        android:textColor="@color/trimble_white"
                        android:layout_toRightOf="@+id/group_selected_image"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="11dp"
                        android:text="Region name missing"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:id="@+id/group_selected_members"
                        android:textSize="12sp"
                        android:textColor="@color/orbit_text_color"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/group_selected_image"
                        android:layout_below="@+id/group_selected_name"
                        android:layout_marginLeft="11dp"
                        android:text="0 in Queue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/group_selected_events"
                        android:includeFontPadding="false"
                        android:textSize="12sp"
                        android:textColor="@color/orbit_text_color"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/group_selected_image"
                        android:layout_below="@+id/group_selected_members"
                        android:layout_marginLeft="11dp"
                        android:text="0 Activities" />

                    <ToggleButton
                        android:id="@+id/mute_toggle"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/check"
                        android:focusable="false"
                        android:checked="true"
                        android:textOn=""
                        android:textOff=""
                        android:focusableInTouchMode="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="9dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/activity_light_color"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/group_recycler"
                android:background="@android:color/transparent"
                android:layout_below="@+id/group_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="50dp">
            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/empty_group_layout"
                android:layout_below="@+id/group_selected"
                android:layout_marginTop="14dp"
                android:background="@drawable/gradient_overlay_groups"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/goto_bungie"
                    android:background="@color/app_theme_color"
                    android:text="VERIFY ON BUNGIE.NET"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="@color/trimble_white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorLink="@color/app_theme_color"
                    android:id="@+id/empty_grp_text"
                    android:gravity="center"
                    android:layout_above="@+id/goto_bungie"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="11dp"
                    android:textColor="@color/trimble_white"
                    android:textSize="16sp"
                    android:text="@string/unverified_bungie_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/empty_grp_text"
                    android:id="@+id/empty_grp_text1"
                    android:gravity="center"
                    android:text="To play with other regions and update your profile, please verify your account."
                    android:layout_marginBottom="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/trimble_white"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/empty_grp_text1"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="VERIFY YOURSELF, AGENT"
                    android:layout_marginBottom="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/activity_light_color"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_background_signin"
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/verify_fail">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/traveller_bdg"
            android:src="@mipmap/img_b_g_top_hero"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFY YOUR ACCOUNT"
            android:id="@+id/verify_text"
            android:textColor="@color/trimble_white"
            android:layout_below="@+id/traveller_bdg"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_text"
            android:layout_below="@+id/verify_text"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#B3000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_text"
                android:layout_marginTop="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/trimble_white"
                android:text="@string/verify_accnt_toptext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verify_bottom_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/top_text"
                android:textColorLink="@color/app_theme_color"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="24dp"
                android:textColor="@color/trimble_white"
                android:text="@string/verify_accnt_bottomtext"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verify_logout"
            android:layout_below="@+id/welcome_text"
            android:text="@string/verify_logout_text"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/send_msg_again"
            android:textSize="14sp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/message_missing_tryagain"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sample_background"
        android:id="@+id/progress_bar_layout"
        android:clickable="true"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress" />
    </RelativeLayout>

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/legal_web"
        android:visibility="gone">
    </WebView>
</android.support.v4.widget.DrawerLayout>
    <include layout="@layout/activity_base" />
</RelativeLayout>