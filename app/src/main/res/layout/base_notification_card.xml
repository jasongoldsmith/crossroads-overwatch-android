<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/base_test_card"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="@color/app_theme_color"
    card_view:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/notification_bar_base"
        android:background="@color/app_theme_color"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/noti_icon"
            android:src="@mipmap/icon_notification"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <co.crossroadsapp.overwatch.utils.CircularImageView
            android:id="@+id/player_msg_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@color/app_theme_color"
            android:background="@color/app_theme_color"
            circularBorderWidth="1dp"
            borderColor="#979797"
            shadow="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noti_toptext"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/trimble_white"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noti_topsubtext"
                android:layout_below="@+id/noti_toptext"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/trimble_white"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noti_text"
                android:layout_below="@+id/noti_topsubtext"
                android:fontFamily="sans-serif"
                android:textColor="@color/trimble_white"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:paddingBottom="0dp"
                android:paddingRight="15dp"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>