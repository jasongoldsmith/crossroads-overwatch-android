<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="@drawable/choose_platform_dropdown_bg">

    <android.support.v7.widget.CardView
        xmlns:conversation="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/console_card"
        conversation:cardBackgroundColor="@color/choose_platform_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/console_card_frag"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <!--<ImageView-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:id="@+id/activity_icon"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_centerVertical="true"/>-->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/console_img"
                android:visibility="invisible"
                android:src="@drawable/icon_psn_consolex"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drop_arrow"
                android:visibility="gone"
                android:src="@drawable/icon_arrow_dwn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_console_text"
                android:text="MISSING Console"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="40dp"/>-->
            <!--android:layout_alignRight="@+id/event_icon"-->/>

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/icon_arrow_rght"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:padding="8dp"/>-->


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>