<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:conversation="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_checkpoint_card"
        conversation:cardCornerRadius="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_checkpoint_card_frag"
            android:orientation="horizontal"
            android:background="@drawable/choose_platform_dropdown_bg"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_checkpoint_text"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="20sp"
                android:paddingEnd="0dp"
                android:paddingStart="15dp"
                android:drawablePadding="17dp"
                android:drawableLeft="@drawable/icon_22x20_transparent"
                android:textColor="@color/trimble_white"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>