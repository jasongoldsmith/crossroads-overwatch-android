<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trimble_black"
    tools:context=".GroupDrawerAdapter">

    <android.support.v7.widget.CardView
        xmlns:conversation="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="8dp"
        conversation:cardBackgroundColor="@android:color/transparent"
        conversation:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f72a4e56">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/traveler_logo"
            android:layout_centerHorizontal="true"
            android:clipChildren="false"
            android:clipToPadding="false">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_logo_badge"
            android:layout_marginTop="-6dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_top_text"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/traveler_logo"
            android:layout_marginTop="14dp"
            android:textColor="@color/trimble_white"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/group_top_text"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="66dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:id="@+id/group_bottom_text"
            android:layout_below="@+id/group_top_text"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#00b6e7"
            android:textSize="12sp"
            android:text="@string/group_other_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/save_group_btn"
            android:background="#0086d0"
            android:text="SAVE GROUP"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_recycler"
            android:background="@android:color/transparent"
            android:layout_below="@+id/group_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dp"
            android:layout_above="@+id/save_group_btn">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
