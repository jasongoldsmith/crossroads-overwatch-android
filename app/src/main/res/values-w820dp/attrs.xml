<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="trimble_video_player">
        <!-- Specifies the size of the video player -->
        <attr name="video_player_size" format="integer" />
        <attr name="progress_bar_view" format="reference" />
        <attr name="video_player_type" format="enum">
            <enum name="main_player" value="0" />
            <enum name="overlay_player" value="1" />
            <enum name="moment_player" value="2" />
        </attr>
        <attr name="video_controls" format="reference"></attr>
        <attr name="player_class" format="enum">
            <enum name="media_player" value="0" />
            <enum name="exo_player" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwipeDeck">
        <attr name="max_visible" format="integer"/>
        <attr name="rotation_degrees" format="float"/>
        <attr name="card_spacing" format="dimension"/>
        <attr name="render_above" format="boolean"/>
        <attr name="render_below" format="boolean"/>
        <attr name="opacity_end" format="float"/>
        <attr name="card_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="trimble_overlay_player">
    <!-- Specifies fast forward and rewind time to show those controls player -->
    <attr name="video_fast_forward_rewind" format="integer" />
    </declare-styleable>

    <declare-styleable name="OnErrorState">
        <attr name="on_error" format="boolean" />
    </declare-styleable>
    <declare-styleable name="OnPlayState">
        <attr name="on_play" format="integer" />
    </declare-styleable>

    <!-- CircularImageView Custom Styling -->
    <declare-styleable name="CircularImageView">

        <!-- Whether or not to draw a circular border around the image. -->
        <attr name="border" format="boolean"/>
        <!-- The color of the border draw around the image. (if enabled) -->
        <attr name="borderColor" format="color"/>
        <!-- Makes the border this pixels wide. (if enabled) -->
        <attr name="circularBorderWidth" format="dimension"/>
        <!-- Whether or not to draw a selector on this view upon touch events. -->
        <attr name="selector" format="boolean"/>
        <!-- The color of the selector draw on top of the image upon touch events. (if enabled) -->
        <attr name="selectorColor" format="color"/>
        <!-- The color of the selector stroke drawn around the image upon touch events. Be sure to provide some opacity. (if enabled) -->
        <attr name="selectorStrokeColor" format="color"/>
        <!-- The selector stroke drawn around the image upon touch events this pixels wide. (if enabled) -->
        <attr name="selectorStrokeWidth" format="dimension"/>
        <!-- Whether or not to draw a shadow around your circular image. -->
        <attr name="shadow" format="boolean"/>
        <!-- The radius for the shadow to extend to. (if enabled) -->
        <attr name="shadowRadius" format="float"/>
        <!-- Horizontal shadow offset. (if enabled) -->
        <attr name="shadowDx" format="float"/>
        <!-- Vertical shadow offset. (if enabled) -->
        <attr name="shadowDy" format="float"/>
        <!-- The color of the shadow drawn around your circular image. (if enabled) -->
        <attr name="shadowColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircularImageViewStyle">
        <attr name="circularImageViewDefault" format="reference"/>
    </declare-styleable>



    <!-- CircularImageView Custom Styling -->
    <declare-styleable name="TrimbleButton">
        <attr name="iconSrc" format="reference" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconSize" format="dimension" />
    </declare-styleable>
</resources>